<view class="uni-tab-bar" bind:__l="__l"><scroll-view class="uni-swiper-tab" id="tab-bar" scroll-x scroll-left="{{scrollLeft}}"><block wx:for="{{tabBars}}" wx:for-item="tab" wx:for-index="index" wx:key="ref"><view class="{{['swiper-tab-list',tabIndex==index?'active':'']}}" id="{{tab.ref}}" data-current="{{index}}" data-event-opts="{{[['tap',[['tapTab',[index]]]]]}}" bindtap="__e">{{tab.name}}</view></block></scroll-view><block wx:for="{{newsList}}" wx:for-item="tabItem" wx:for-index="idx" wx:key="id"><block wx:if="{{tabIndex===idx}}"><scroll-view class="list" scroll-y data-event-opts="{{[['scrolltolower',[['loadMore',[idx]]]]]}}" bindscrolltolower="__e"><block wx:for="{{tabItem.data}}" wx:for-item="newsItem" wx:for-index="newsIndex" wx:key="id"><view><view data-event-opts="{{[['tap',[['goDetail',['$0'],[[['newsList','id',tabItem.id],['data','id',newsItem.id]]]]]]]}}" class="uni-item" bindtap="__e"><view class="uni-itemtop"><image class="uni-itemimage" src="{{newsItem.image_url}}"></image><view class="uni-itemtextview"><text class="uni-itemtitle">{{newsItem.title}}</text></view></view><view class="uni-itembottom"><text class="uni-itembottom-text">{{newsItem.source}}</text><text class="uni-itembottom-text">{{newsItem.comment_count+"评论"}}</text><text class="uni-itembottom-text">{{newsItem.datetime}}</text><view class="uni-itembottom-row-reverse"><text data-event-opts="{{[['tap',[['dislike',[idx,newsIndex]]]]]}}" class="x" bindtap="__e">X</text></view></view></view></view></block><view class="uni-tab-bar-loading"><view class="loading-more">{{loadingText}}</view></view></scroll-view></block></block></view>