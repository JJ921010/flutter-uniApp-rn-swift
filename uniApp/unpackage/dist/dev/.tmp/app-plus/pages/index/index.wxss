
.indexPage {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-left: 14rpx;
	margin-right: 14rpx;
	margin-top: 12rpx;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	background-color: #FFFFFF;
}
.index-swiper-view {
	height: 300rpx;
	width: 100%;
}
.index-swiper {
	height: 300rpx;
	border-radius: 10rpx;
	overflow: hidden;
}
.index-swiper-item {
	padding: 0rpx 5rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	height: 300rpx;
}
.index-swiper-item-image {
	width: 100%;
	height: 300rpx;
	border-radius: 10rpx;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 51%, 0.1);
	        box-shadow: 0 0 10px hsla(0, 0%, 51%, 0.1);
}
.page-index-title{
	height: 100rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	font-size: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.page-index-title-text {
	color: #e91e63;
	font-size: 50rpx;
}
.scroll-persona-view {
	height: 260rpx;
	width: 100%;
}
.scroll-persona-item{
	width: 260rpx;
	height: 260rpx;
	margin-right: 12rpx;
	position: relative;
}
.scroll-persona-item-image {
	border-radius: 10rpx;
	height: 260rpx;
	width: 260rpx;
}
.scroll-persona-item-name {
	background-color: rgb(0, 0, 0, 0.3);
	width: 100%;
	border-radius: 0rpx 0rpx 10rpx 10rpx;
	left: 0rpx;
	bottom: 0rpx;
	font-size: 10px;
	padding: 15rpx;
	color: #fff;
	position: absolute;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: inline-block;
	white-space: nowrap; 
	overflow: hidden;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
}
.scroll-mv-view {
	height: 240rpx;
	width: 100%;
}
.scroll-mv-item{
	width: 360rpx;
	height: 240rpx;
	margin-right: 12rpx;
	position: relative;
}
.scroll-mv-item-image {
	border-radius: 10rpx;
	height: 240rpx;
	width: 360rpx;
}
.scroll-song-view {
	width: 100%;
	height: 200rpx;
}
.scroll-song-item {
	width: 200rpx;
	height: 200rpx;
	margin-right: 12rpx;
	position: relative;
}
.scroll-song-image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
}
.scroll-song-name {
	background-color: rgb(0, 0, 0, 0.3);
	width: 100%;
	top: 90rpx;
	left: 0rpx;
	font-size: 10px;
	color: #fff;
	position: absolute;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: inline-block;
	white-space: nowrap; 
	overflow: hidden;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
	text-align: center;
	z-index: 1;
}


