
.item {
	display: inline-block;
    width: calc((100% - 12rpx) / 3 - 12rpx);
    height: 0;
    padding-bottom: calc((100% - 12rpx) / 3 - 12rpx);
    position: relative;
	margin-right: 12rpx;
	margin-top: 12rpx;
}
.item-name {
	position: absolute;
	z-index: 2;
	bottom: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.3);
	border-radius: 0rpx 0rpx 10rpx 10rpx;
	padding: 15rpx;
	font-size: 22rpx;
	width: 100%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	color: #fff;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
	text-align: center;
}
.item-image {
	width: 100%;
	border-radius: 10rpx;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 51%, 0.3);
	        box-shadow: 0 0 10px hsla(0, 0%, 51%, 0.3);
	height: 100%;
	left: 0;
	top: 0;
	position: absolute;
}
	

