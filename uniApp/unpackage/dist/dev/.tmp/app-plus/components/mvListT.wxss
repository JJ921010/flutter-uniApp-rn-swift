
.mvListTPage {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	width: 100%;
}
.mvListTPage-item {
	z-index: 1;
	overflow: hidden;
	height: 400rpx;
	margin-bottom: 25rpx;
	border-radius: 10rpx;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 50%, 0.1);
	        box-shadow: 0 0 10px hsla(0, 0%, 50%, 0.1);
	margin-left: 12rpx;
	margin-right: 12rpx;
	background-color: #007AFF;
	position: relative;
}
.mvListTPage-item-name {
	position: absolute;
	z-index: 2;
	left: 0;
	bottom: 0;
	width: 100%;
	color: #fff;
	font-size: 22rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 12rpx 16rpx;
	background: rgba(0, 0, 0, 0.5);
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.mvListTPage-item-image {
	width: 100%;
	height: 400rpx;
	border-radius: 10rpx;
}
.mvListTPage-item-playBtn {
	left: 40rpx;
	top: 40rpx;
	width: 100rpx;
	height: 100rpx;
	position: absolute;
	background: rgba(255, 255, 255, 0.6);
	border-radius: 50%;
}
.mvListTPage-item-playBtn-icon {
	margin: 32rpx 0rpx 0rpx 40rpx;
	border-top: 16rpx solid transparent;
	border-bottom: 16rpx solid transparent;
	border-left: 30rpx solid #e91e63;
	position: absolute;
}

