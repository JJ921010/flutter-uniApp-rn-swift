
.simiMvList {
	margin-left: 20rpx;
	margin-right: 20rpx;
}
.simiMvList .item {
	background: #fff;
	border-radius: 10rpx;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 51%, 0.2);
	        box-shadow: 0 0 10px hsla(0, 0%, 51%, 0.2);
	margin-bottom: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.simiMvList .item .pic {
	width: 270rpx;
	height: 170rpx;
	margin-right: 30rpx;
}
.simiMvList .item .pic image {
	max-width: 100%;
	height: 170rpx;
	border-radius: 10rpx;
}
.simiMvList .item .info {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.simiMvList .item .info .name {
	margin-top: 25rpx;
	font-weight: bold;
	font-size: 30rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}
.simiMvList .item .info .artistName {
	color: #999;
	font-size: 24rpx;
}
.simiMvList .item .btn {
	margin-top: 50rpx;
	margin-left: 10rpx;
	width: 85rpx;
}
.simiMvList .item .btn text {
	display: inline-block;
	width: 10rpx;
	height: 10rpx;
	border-radius: 50%;
	background: #999;
	margin: 0rpx 5rpx;
}
	

